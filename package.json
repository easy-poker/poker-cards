{
  "name": "@pairjacks/poker-cards",
  "version": "0.3.0",
  "private": false,
  "description": "Handles cards, decks and hands for poker",
  "repository": {
    "type": "git",
    "url": "https://github.com/pairjacks/poker-cards.git"
  },
  "license": "MIT",
  "author": "Kav Singh <flakisms@gmail.com>",
  "contributors": [],
  "engines": {
    "node": ">=12.0.0"
  },
  "main": "./src/index.ts",
  "scripts": {
    "test": "jest",
    "test:mutation": "stryker run",
    "lint": "tsc && eslint . --ext .ts,.js",
    "build:prebuild": "rm -rf dist && rm -rf temp",
    "build:js": "rollup -c --environment BUILD:production",
    "build:declarations": "tsc -P ./tsconfig.declarations.json",
    "build:bundle_package_json": "ts-node -P ./tsconfig.ts-node.json --log-error scripts/bundle-package-json.ts",
    "build:copy_readme": "cp README.md ./dist",
    "build:postbuild": "rm -rf temp",
    "build": "pnpm build:prebuild && pnpm build:declarations && pnpm build:js && pnpm build:bundle_package_json && pnpm build:copy_readme && pnpm build:postbuild"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "21.0.2",
    "@rollup/plugin-node-resolve": "13.1.3",
    "@rollup/plugin-typescript": "8.3.1",
    "@stryker-mutator/core": "5.6.1",
    "@stryker-mutator/jest-runner": "5.6.1",
    "@swc/core": "1.2.154",
    "@swc/jest": "0.2.20",
    "@tsconfig/node16": "1.0.2",
    "@types/jest": "27.4.1",
    "@types/node": "17.0.21",
    "@typescript-eslint/eslint-plugin": "5.14.0",
    "@typescript-eslint/parser": "5.14.0",
    "core-js": "3.21.1",
    "eslint": "8.11.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-filenames": "1.3.2",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jest": "26.1.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-tsdoc": "0.2.14",
    "jest": "27.5.1",
    "prettier": "2.5.1",
    "rollup": "2.70.0",
    "rollup-plugin-dts": "4.2.0",
    "rollup-plugin-swc": "0.2.1",
    "ts-node": "10.7.0",
    "tslib": "2.3.1",
    "typescript": "4.6.2"
  }
}
